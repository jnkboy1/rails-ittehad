
<h1>Hello <% if current_user %> <%= current_user.email %> <% else %> Guest <% end %></h1>
<% if current_user %>
    <%= link_to "Edit Profile", edit_profile_path, class:"waves-effect waves-light btn pink" %>
    <%= link_to "Logout", destroy_user_session_path,class:"waves-effect waves-light btn", method: :delete, data: { confirm: "Are you sure?"} %>
<% else %>
    <%= link_to "Login", new_user_session_path, class:"waves-effect waves-light btn light-pink" %>
    or
    <%= link_to "Create Account",  new_user_registration_path, class:"waves-effect waves-light btn pink" %>
<% end %>
